<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  </head>
  <body>
    <%- include("../partials/header", { title }) %>

    <main class="container mt-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><%= title %></h1>
        <div class="d-flex gap-2">
          <a href="/recipes/new" class="btn btn-primary flex-grow-1">
            <i class="bi bi-plus-circle"></i> Add Recipe
          </a>
          <% if (recipes.length > 0) { %>
            <a href="/recipes/edit" class="btn btn-warning flex-grow-1">
              <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="/recipes/delete" class="btn btn-danger flex-grow-1">
              <i class="bi bi-trash"></i> Delete
            </a>
          <% } %>
        </div>
      </div>

      <div class="row">
        <% if (recipes.length === 0) { %>
          <div class="col-12 text-center py-5">
            <p class="text-muted">No recipes found.</p>
            <a href="/recipes/new" class="btn btn-primary">Create Your First Recipe</a>
          </div>
        <% } else { %>
          <% recipes.forEach((r, index) => { %>
          <div class="col-12 col-sm-12 col-md-6 col-xl-4 mb-4">
            <div class="card h-100">
              <div class="card-body">
                <h2 class="card-title h5"><%= r.name %></h2>
                <p class="mb-2">
                  <span class="text-muted">Ingredients:</span>
                  <span class="badge bg-primary ms-2"><%= r.ingredients.length %></span>
                </p>
                <ul class="list-group list-group-flush mb-3">
                  <% r.ingredients.forEach(i => { %>
                  <li class="list-group-item py-2"><%= i %></li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>
          <% }); %>
        <% } %>
      </div>
    </main>

    <%- include("../partials/footer") %>
  </body>
</html>
